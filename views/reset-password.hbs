<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      {{>messages}}
      <h1 class="text-center mt-3">
        Reset Password
      </h1>
      <form action="/auth/reset-password/{{id}}/{{token}}" method="POST">
        <div class="mb-3">
          <label for="password" class="mb-2">
            Password
          </label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">
            Confirm Password
          </label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            class="form-control"
            placeholder="Confirm Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Reset Password
        </button>
      </form>
    </div>
  </div>
</div>