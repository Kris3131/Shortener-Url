<h1 class="text-center mt-3">
  Url Shortener
</h1>
<div class="alert alert-info" role="alert">
  <span class="mr-2">
    Shorten URL:
  </span>
  {{#if url}}
    <h2>
      Success! Please use this link:
    </h2>
    <p></p>
    <input
      type="text"
      target="_blank"
      id="copyUrlInput"
      class="form-control"
      value="{{randomUrl}}"
    />

    <button onclick="copyToCliBoard()" class="btn btn-secondary mt-3">
      複製連結
    </button>
    <script>
      function copyToCliBoard() { 
							const copyText = document.getElementById("copyUrlInput"); 
							copyText.select();
							copyText.setSelectionRange(0, 99999); 
							document.execCommand("copy"); alert("Copied the text: " + copyText.value);
			}
    </script>
  {{/if}}
</div>
<button class="btn btn-success">
  <a href="/">
    返回
  </a>
</button>
<button class="btn btn-info">
  <a href="/shortUrl">
    查看
  </a>
</button>